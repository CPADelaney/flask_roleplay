name: Initialize Database

# Let you kick it off from the Actions UI
on:
  workflow_dispatch:

jobs:
  init-db:
    runs-on: ubuntu-latest

    services:
      postgres:
        image: postgres:13
        env:
          POSTGRES_USER: myuser
          POSTGRES_PASSWORD: mypass
          POSTGRES_DB: mydb
        # wait until Postgres is ready
        options: >-
          --health-cmd "pg_isready -U myuser"
          --health-interval 10s
          --health-timeout 5s
          --health-retries 5

    steps:
      - name: Check out repo
        uses: actions/checkout@v3

      - name: Set up Python 3.10
        uses: actions/setup-python@v4
        with:
          python-version: 3.10

      - name: Install dependencies
        run: |
          pip install asyncpg
          # plus any other requirements your script needs
          if [ -f requirements.txt ]; then pip install -r requirements.txt; fi

      - name: Initialize DB schema
        env:
          # point your script at the running Postgres
          DATABASE_URL: postgres://myuser:mypass@localhost:5432/mydb
        run: |
          python path/to/your/db_init_script.py
